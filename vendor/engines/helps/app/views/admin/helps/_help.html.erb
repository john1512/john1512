<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(help) -%>">
  <span class='title'>
    <%= help %>
    <span class="preview">&nbsp;</span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_go.png"), help_url(help),
        :title => t('.view_live'),
        :target => "_blank" %>
    <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_help_path(help),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), admin_help_path(help),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :'data-confirm' => t('shared.admin.delete.message'),
        :'data-method' => :delete %>
  </span>
</li>
