<% content_for :body_content_title, @news_item.title %>
<% content_for :body_content_left do %>
  <p>
    <span class='blueText'><%= @news_item.publish_date.strftime("%e %B, %Y %l:%M") %></span>
  </p>
  <%= @news_item.body.html_safe %>
  <p>
    <%= link_to t('.back_to_index'), news_items_url %>
  </p>
<% end %>
<% content_for :body_content_right, render(:partial => 'recent_posts') %>

